@{
  ViewBag.Title = "Home Page";  
}

<h1>@ViewBag.Title</h1>
<div class="box">
  Environment: @ViewBag.CurrentEnvironment
</div>

<environment include="Development">
  <button class="button button-blue-back">Button available only at Development Environment</button>
</environment>
<environment exclude="Development">
  <button class="button button-green-back">Button available for any other than Development Environment</button>
</environment>