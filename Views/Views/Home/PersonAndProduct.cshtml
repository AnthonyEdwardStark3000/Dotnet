@* @using Views.Models; imported in the _ViewImports.cshtml*@
@model PersonAndProductWrapper;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Person With Product</title>
    <link rel="stylesheet" href="~style.css">
</head>
<body>
    <div class="page-content">
        <h2>Person with product</h2>
        <div class="box w-100">
            <h3>Person</h3>
            <table class="table w-50">
                <tbody>
                    <tr>
                        <td>Person Name :</td>
                        <td>@Model.PersonData.Name</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="box w-100">
            <h3>Product</h3>
            <table class="table w-50">
                <tbody>
                    <tr>
                        <td>Product Name :</td>
                        <td>@Model.ProductData.ProductName</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <a href="/home">Back</a>
    </div>
</body>
</html>